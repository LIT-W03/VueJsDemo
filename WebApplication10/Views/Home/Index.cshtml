

<div id="app">
    <input type="text" class="form-control" v-model="message" />
    <p>{{message}}</p>
    <button class="btn btn-primary" v-on:click="reverseMessage">Wackbards!</button>
    <br />
    <button class="btn btn-success" v-on:click="addNumber">Add Random Number</button>
    <button class="btn btn-danger" v-on:click="sortNumbers">Sort Numbers</button>
    <br />
    <input type="text" class="form-control" v-model="numberData.numberToAdd"/>
    <button class="btn btn-info" v-on:click="addNumberFromTextbox">Add From Textbox</button>
    <ul>
        <template v-for="number in numberData.numbers">
            <li style="font-size: 20px;">{{number}}</li>
        </template>
    </ul>
</div>


@section scripts
{
    <script src="/Scripts/vue.min.js"></script>
    <script src="/Scripts/index.js"></script>
}